<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/bg_rect_btn_gray_empty"
    android:layout_height="wrap_content"
    android:id="@+id/unit_home_room_bg"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/ll_dev_place"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_dev_icon"
            android:background="@drawable/unit_message_dev">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_dev_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商用控制器"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_dev_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="设备编号"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_dev_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="安装位置"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_dev_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="信号强度"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dev_place"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_dev_place"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="共享"
            android:background="@drawable/bg_rect_btn_unit_blue_fill"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="10sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:id="@+id/tv_dev_status_img"
            android:background="@drawable/unit_online">
        </ImageView>
        <TextView
            android:id="@+id/tv_dev_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="在线"
            android:gravity="center"
            android:textColor="@color/type_online"
            android:textSize="10sp"/>

    </LinearLayout>
</RelativeLayout>

</layout>