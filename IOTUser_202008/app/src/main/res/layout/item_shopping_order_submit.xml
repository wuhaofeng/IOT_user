<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/item_rect_shopping_list"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="设备名称"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dev_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shopping_device"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="2dp"
                    android:text="地址"
                    android:textColor="#919191"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_devnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="2dp"
                    android:text="设备编号"
                    android:textColor="#919191"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="2dp"
                    android:text="日期"
                    android:textColor="#919191"
                    android:textSize="12sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:background="@drawable/item_rect_shopping_yellow">
                        <TextView
                            android:id="@+id/tv_select_year_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="续费一年 无折扣"
                            android:textColor="@color/textColor"
                            android:textSize="14sp"/>
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:background="@color/backgroundGray"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:textColor="@color/type_02"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:text="￥0"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
