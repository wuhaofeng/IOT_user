                   android:layout_centerVertical="true"
                   android:layout_marginRight="4dp"
                   android:layout_toLeftOf="@+id/tvLoadMore"
                   app:matProg_barColor="@color/black_text2_color"
                   app:matProg_barWidth="2dp"
