<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.iot.user.ui.activity.register.RegisterActivity" />
    </data>
<LinearLayout
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_login_user"
            />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:inputType="phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLength="12"
            android:textColor="@color/black_text2_color"
            android:textColorHint="@color/black_text3_color"
            android:textSize="14sp"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_reg_vcode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_get_code"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@color/main_color"
            android:text="获取验证码"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/btn_get_code"
            android:background="@drawable/login_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <ImageView
                android:id="@+id/iv_yzm"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_user_yzm"
                />

            <EditText
                android:id="@+id/et_old_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/black_text2_color"
                android:textColorHint="@color/black_text3_color"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_user_law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <!-- 记住密码 -->
        <CheckBox
            android:id="@+id/cb_user_law"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_password_input_ll"
            android:button="@drawable/common_checkbox_button_shape"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:layout_marginLeft="20dp"
            android:textColor="@color/primary_dark2_grey_color"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已认真阅读并同意"/>
        <TextView
            android:id="@+id/tv_law"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/google_green"
            android:text="《用户使用协议及隐私政策》"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_reg_pwd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_login_pw" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/black_text2_color"
            android:textColorHint="@color/black_text3_color"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_reg_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_login_pw" />
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:textColor="@color/black_text2_color"
            android:textColorHint="@color/black_text3_color"
            android:textSize="14sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/main_color"
        android:text="注册"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/btn_register_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/common_blue_button_shape"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="15sp"/>


</LinearLayout>
</layout>