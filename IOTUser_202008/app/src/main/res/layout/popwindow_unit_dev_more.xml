<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/pop_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/unit_home_pop_dev"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="查看联系人"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/pop_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_find_replace_white_24dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="编辑设备"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pop_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_tv_white_24dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pop_remove"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="解绑设备"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_unit_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/unit_home_pop_share"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="分享设备"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>
