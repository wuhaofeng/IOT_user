<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.iot.user.ui.fragment.message.UnitMessageFragment" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unit_bg_home"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/message_tablayout"
        android:layout_below="@+id/titlebar_sep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/google_blue"
        app:tabTextColor="@android:color/black"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="@color/google_blue"
        app:tabTextAppearance="@style/TabStyle" >
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/message_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" />

</LinearLayout>
</layout>